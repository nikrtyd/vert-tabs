{
  "manifest_version": 2,
  "name": "Verts: Edge-like vertical tabs",
  "description": "Fast, simple and ready to use. Or you can customize it just how you want! Contributions are welcome: https://github.com/nikrtyd/verts ðŸ˜Š",
  "version": "0.0.9",
  "homepage_url": "https://github.com/nikrtyd/verts",
  "icons": {
    "16": "icons/gray16.png",
    "32": "icons/gray32.png",
    "48": "icons/gray48.png",
    "96": "icons/gray96.png",
    "128": "icons/gray128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "73.0a1"
    }
  },
  "sidebar_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Verts",
    "default_panel": "panel.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "Show Verts panel in a sidebar",
    "default_icon": "icons/icon.svg"
  },
  "options_ui": {
    "browser_style": true,
    "open_in_tab": true,
    "page": "config.html"
  },
  "permissions": [
    "tabs"
  ],
  "optional_permissions": [
    "tabHide",
    "bookmarks",
    "downloads"
  ]
}
